{
	"compilerOptions": {
		"types": ["node"],
		"module": "NodeNext",
		"target": "ESNext",
		"esModuleInterop": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "./lib"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
